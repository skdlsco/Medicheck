<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/result_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/result_drawer_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_dehaze_24dp" />

            <medical.medicheck.View.LetterSpacingTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/cabin_bold_ttf"
                android:gravity="center_vertical"
                android:text="진단"
                android:textColor="@color/colorRed"
                android:textSize="21sp" />
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="증상"
                    android:textColor="@color/colorRed"
                    android:textSize="30sp"
                    app:letterSpacing="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/circle" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="아픈 부위 : "
                        android:textColor="#222222"
                        app:letterSpacing="2" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:id="@+id/result_sick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="눈, 각막"
                        android:textColor="#222222"
                        app:letterSpacing="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/circle" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="통증 시작 시기 : "
                        android:textColor="#222222"
                        app:letterSpacing="2" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:id="@+id/result_sickStart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="1일 ~ 1주일 전"
                        android:textColor="#222222"
                        app:letterSpacing="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/circle" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="통증 주기 : "
                        android:textColor="#222222"
                        app:letterSpacing="2" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:id="@+id/result_sickTerm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="특정 상황"
                        android:textColor="#222222"
                        app:letterSpacing="2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/circle" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:id="@+id/result_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="김안과, 서울 특별시 숙대입구역"
                        android:textColor="#222222"
                        app:letterSpacing="2" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp">

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="이와 같은 증상으로\n병원을 찾은 적이 있나요?"
                    android:textColor="@color/colorRed"
                    android:textSize="30sp"
                    app:letterSpacing="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/result_ask1_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="예, 같은 병원에 같은 증상으로 방문했습니다."
                    android:textColor="#222222"
                    android:textSize="15sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/result_ask2_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="예, 다른 병원에 같은 증상으로 방문했습니다."
                    android:textColor="#222222"
                    android:textSize="15sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/result_ask3_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="아니오, 같은 병원에 다른 증상으로 방문했습니다."
                    android:textColor="#222222"
                    android:textSize="15sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/result_ask4_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="아니오, 이 병원에 방문한 적이 없습니다."
                    android:textColor="#222222"
                    android:textSize="15sp"
                    app:letterSpacing="3" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <medical.medicheck.View.LetterSpacingTextView
            android:id="@+id/result_btn_next"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/radius_solid_red"
            android:gravity="center"
            android:text="예약하기"
            android:textColor="@color/colorWhite"
            app:letterSpacing="3" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/nav_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <medical.medicheck.View.LetterSpacingTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="Medicheck"
                android:textColor="@color/colorRed"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
