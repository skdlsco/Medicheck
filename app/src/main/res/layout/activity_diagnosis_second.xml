<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/diagnosisSecond_toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/diagnosisSecond_drawer_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_dehaze_24dp" />

            <medical.medicheck.View.LetterSpacingTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/cabin_bold"
                android:gravity="center_vertical"
                android:text="진단"
                android:textColor="@color/colorRed"
                android:textSize="21sp" />
        </android.support.v7.widget.Toolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="03. "
                    android:textColor="@color/colorRed"
                    android:textSize="30sp"
                    app:letterSpacing="2" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="통증이 시작된 시점을\n선택해주세요."
                    android:textColor="@color/colorRed"
                    android:textSize="30sp"
                    app:letterSpacing="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/diagnosis_second_start1_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/radio_selector" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="오늘"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        app:letterSpacing="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/diagnosis_second_start2_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/radio_selector" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="1일 ~ 1주일 전"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        app:letterSpacing="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/diagnosis_second_start3_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/radio_selector" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="1주일 ~ 2주일 전"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        app:letterSpacing="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/diagnosis_second_start4_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/radio_selector" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="2주일 ~ 한달 전"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        app:letterSpacing="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp">

                    <ImageView
                        android:id="@+id/diagnosis_second_start5_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/radio_selector" />

                    <medical.medicheck.View.LetterSpacingTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="@font/nanum_square_regular"
                        android:text="한달전"
                        android:textColor="#222222"
                        android:textSize="16sp"
                        app:letterSpacing="3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp">

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="04. "
                    android:textColor="@color/colorRed"
                    android:textSize="30sp"
                    app:letterSpacing="2" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_extra_bold"
                    android:text="통증의 주기를\n선택해주세요."
                    android:textColor="@color/colorRed"
                    android:textSize="30sp"
                    app:letterSpacing="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/diagnosis_second_term1_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="1분 이내"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/diagnosis_second_term2_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="1분 ~ 30분"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/diagnosis_second_term3_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="30 분 ~"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/diagnosis_second_term4_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="특정 상황"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:letterSpacing="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/diagnosis_second_term5_img"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/radio_selector" />

                <medical.medicheck.View.LetterSpacingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/nanum_square_regular"
                    android:text="불규칙적"
                    android:textColor="#222222"
                    android:textSize="16sp"
                    app:letterSpacing="3" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <medical.medicheck.View.LetterSpacingTextView
            android:id="@+id/diagnosisSecond_btn_next"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginBottom="38dp"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:background="@drawable/radius_solid_red"
            android:gravity="center"
            android:text="다음"
            android:textColor="@color/colorWhite"
            app:letterSpacing="3" />
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/nav_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <medical.medicheck.View.LetterSpacingTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="Medicheck"
                android:textColor="@color/colorRed"
                android:textSize="18sp" />
        </LinearLayout>
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>
